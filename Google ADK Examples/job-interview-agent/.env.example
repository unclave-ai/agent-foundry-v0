# Job Interview Agent Configuration
# Copy this file to .env and fill in your actual values

# Google Calendar API Configuration
GOOGLE_CALENDAR_ID=your_calendar_id@gmail.com
GOOGLE_APPLICATION_NAME=Job Interview Agent

# ADK Configuration
ADK_API_KEY=your_adk_api_key_here
ADK_PROJECT_ID=your_adk_project_id

# Interview Agent Settings
DEFAULT_INTERVIEW_DURATION=60
DEFAULT_PREPARATION_TIME=10
SESSION_TIMEOUT=3600

# Database Configuration (optional - defaults to JSON files)
# DATABASE_URL=sqlite:///interview_sessions.db
# DATABASE_TYPE=sqlite

# Audio/Voice Integration (optional)
# ENABLE_VOICE=false
# SPEECH_API_KEY=your_speech_api_key
# TTS_API_KEY=your_tts_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=interview_agent.log

# Security Settings
SECRET_KEY=your_secret_key_for_session_encryption
CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar

# Development Settings
DEBUG=false
TESTING=false

# Email Notifications (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# ENABLE_EMAIL_NOTIFICATIONS=false
